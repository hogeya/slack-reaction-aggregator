{
  "compilerOptions": {
    "target": "es2017",
    "lib": [ "esnext", "dom" ],
    "module": "commonjs",
    "esModuleInterop": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "allowJs": true,
    "emitDecoratorMetadata":true,
    "experimentalDecorators":true
  },
  "include": [
    "src/**/*"
  ]
}
